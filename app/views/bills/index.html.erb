<h1>Booking Details</h1>

<div class="travel">
  <table  class="table table-striped table-dark">
    <thead class = "bg-info">
      <tr>
        <th>From</th>
        <th>To</th>
        <th>Status</th>
        <th>Fuel</th>
        <th>Driver Present</th>
        <th>Car Drop Off At<br/> Different Location</th>
        <th>Bill Generate</th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.from %></td>
          <td><%=  booking.to %></td>
          <td><%= booking.status %></td>
          <td><%= booking.fuel %></td>
          <td><%= booking.want_driver.humanize %></td>
          <td><%= booking.diff_city.humanize %></td>
          <td><%= link_to 'Generate Bill',  new_bill_bills_path(booking.id),class: "btn btn-outline-light" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>