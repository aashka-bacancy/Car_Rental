<h1>Users</h1>

<table class="table table-striped table-dark">
        <thead class = "bg-info">
            <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Contact</th>
            <th>Date Of Birth</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Role</th>
            <th>Address</th>
            <th>Edit</th>
            <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.fname %></td>
                    <td><%=  user.lname%></td>
                    <td><%= user.contact  %></td>
                    <td><%= user.dob %></td>
                    <td> <%= user.gender %></td>
                    <td> <%= user.email %> </td>
                    <td> <%= user.roles.first.name.capitalize %> </td>
                    
                    <td> <%= link_to view_addr_path(user.id) do  %>
                        <%= '<i class="fa fa-map-marker text-light" aria-hidden="true"></i>'.html_safe %>
                        <% end %> 
                    </td>
                    
                    <td> <%= link_to '#' do  %>
                        <%= '<i class="fa fa-pencil-square-o text-light" aria-hidden="true"></i>'.html_safe %>
                        <% end %> 
                    </td>
                    <td> <%= link_to '#' do  %>
                        <%= '<i class="fa fa-trash text-light" aria-hidden="true"></i>'.html_safe %>
                        <% end %> 
                    </td>
                    
                    
                </tr>
            <% end %>
        </tbody>
    </table>



     