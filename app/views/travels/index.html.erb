<h1>Booking Details</h1>

<div class="travel">
    <table  class="table table-striped table-dark">
        <thead class = "bg-info">
            <tr>
            <th>From</th>
            <th>To</th>
            <th>Status</th>
            <th>Fuel</th>
            <th>Driver Present</th>
            <th>Car Drop Off At<br/> Different Location</th>
            <th></th>
            </tr>
        </thead>

        <tbody>
            <% @book.each do |book| %>
            <tr>
                <td><%= book.from %></td>
                <td><%=  book.to %></td>
                <td><%= book.status %></td>
                <td><%= book.fuel %></td>
                <td><%= book.want_driver.humanize %></td>
                <td><%= book.diff_city.humanize %></td>
                <td><%= link_to 'View Booking Details', travel_path(book.id),class: "btn btn-outline-light" %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>